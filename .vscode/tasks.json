{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build minimal stm32f_xxx",
            "command": "cargo",
            "type": "shell",
            "args": [
                "build",
                "--manifest-path",
                "${workspaceRoot}/examples/stm32f_xxx/minimal/Cargo.toml",
                "--target",
                "thumbv7m-none-eabi"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "build minimal linux-embedded",
            "command": "cargo",
            "type": "shell",
            "args": [
                "build",
                "--manifest-path",
                "${workspaceRoot}/examples/linux_embedded/minimal/Cargo.toml",
                "--target",
                "armv7-unknown-linux-gnueabihfi"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "minimal build wasm-pack",
            "command": "wasm-pack",
            "type": "shell",
            "args": [
                "build",
                "examples/wasm32/minimal/"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "minimal npm install",
            "command": "npm",
            "type": "shell",
            "dependsOn": ["minimal build wasm-pack"],
            "args": [
                "install",
                "examples/wasm32/minimal/www"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}