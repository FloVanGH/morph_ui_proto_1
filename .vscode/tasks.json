{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build minimal cortex-m",
            "command": "cargo",
            "type": "shell",
            "args": [
                "build",
                "--target",
                "thumbv7m-none-eabi",
                "--features",
                "no_std",
                "--example",
                "minimal_cortex_m"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "build minimal wasm32",
            "command": "wasm-pack",
            "type": "shell",
            "args": [
                "build",
                "examples/wasm32/minimal/"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
    ]
}